@page
@model Retailer.POS.Web.Pages.Sales.IndexModel
@{
    ViewData["Title"] = "Sales";
}
<h2>Sales</h2>
<a asp-page="Create" class="btn btn-primary mb-2">Create New Sale</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Customer</th>
            <th>SubTotal</th>
            <th>Tax</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Sales)
        {
            <tr>
                <td>@s.Date.ToShortDateString()</td>
                <td>@s.CustomerName</td>
                <td>@s.SubTotal</td>
                <td>@s.TaxAmount</td>
                <td>@s.BalanceAmount</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Details" asp-route-id="@s.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
