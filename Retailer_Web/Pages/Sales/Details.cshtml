@page "{id:int}"
@model Retailer.POS.Web.Pages.Sales.DetailsModel
@{
    ViewData["Title"] = "Sale Details";
}
<h2>Sale Details</h2>

<div>
    <p><strong>Date:</strong> @Model.Sale.Date.ToShortDateString()</p>
    <p><strong>Customer:</strong> @Model.Sale.CustomerName</p>
    <p><strong>Subtotal:</strong> @Model.Sale.SubTotal</p>
    <p><strong>Total Discount:</strong> @Model.Sale.TotalDiscount</p>
    <p><strong>Tax:</strong> @Model.Sale.TaxAmount</p>
    <p><strong>Balance:</strong> @Model.Sale.BalanceAmount</p>
</div>

<h4>Items</h4>
<table class="table">
    <thead><tr><th>Item</th><th>Rate</th><th>Qty</th><th>Discount</th><th>Tax</th><th>Amount</th></tr></thead>
    <tbody>
        @foreach (var d in Model.Sale.Details)
        {
            <tr>
                <td>@d.ItemName</td>
                <td>@d.Rate</td>
                <td>@d.Qty</td>
                <td>@d.Discount</td>
                <td>@d.TaxAmount (@d.TaxPercentage%)</td>
                <td>@d.Amount</td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="Index" class="btn btn-secondary">Back</a>
