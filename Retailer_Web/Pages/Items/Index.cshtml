@page
@model Retailer.POS.Web.Pages.Items.IndexModel
@{
    ViewData["Title"] = "Items";
}
<h2>Items</h2>
<a asp-page="Create">Create New</a>
<table>
  <thead><tr><th>Name</th><th>Rate</th><th>Category</th></tr></thead>
  <tbody>
    @foreach(var it in Model.Items)
    {
      <tr>
        <td>@it.Name</td>
        <td>@it.Rate</td>
        <td>@it.CategoryName</td>
      </tr>
    }
  </tbody>
</table>
