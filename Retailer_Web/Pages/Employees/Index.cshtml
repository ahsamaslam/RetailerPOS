@page
@model Retailer.POS.Web.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<a asp-page="Create" class="btn btn-primary mb-2">Add New Employee</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>City</th>
            <th>Province</th>
            <th>Mobile</th>
            <th>CNIC</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.Employees)
        {
            <tr>
                <td>@emp.FirstName</td>
                <td>@emp.LastName</td>
                <td>@emp.City</td>
                <td>@emp.Province</td>
                <td>@emp.Mobile1</td>
                <td>@emp.CNIC</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
