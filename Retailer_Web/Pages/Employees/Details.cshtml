@page "{id:int}"
@model Retailer.POS.Web.Pages.Employees.DetailsModel
@inject Retailer.POS.Web.Services.IApiClient ApiClient

<h2>Employee Details</h2>

<div>
    <p><strong>First Name:</strong> @Model.Employee.FirstName</p>
    <p><strong>Last Name:</strong> @Model.Employee.LastName</p>
    <p><strong>City:</strong> @Model.Employee.City</p>
    <p><strong>Province:</strong> @Model.Employee.Province</p>
    <p><strong>Mobile:</strong> @Model.Employee.Mobile1</p>
</div>

<a asp-page="Index" class="btn btn-secondary">Back</a>
