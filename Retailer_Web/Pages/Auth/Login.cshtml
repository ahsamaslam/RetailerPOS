@page
@model Retailer.POS.Web.Pages.Auth.LoginModel
<h2>Login (API JWT Demo)</h2>
<form method="post">
  <div><label>Username</label><input asp-for="Username" /></div>
  <div><label>Password</label><input asp-for="Password" type="password" /></div>
  <button type="submit">Login</button>
</form>

@if (Model.Token != null)
{
  <div>
    <h3>JWT Token (copy for API calls)</h3>
    <textarea style="width:100%;height:120px">@Model.Token</textarea>
    <p>Use header: <code>Authorization: Bearer &lt;token&gt;</code></p>
  </div>
}
