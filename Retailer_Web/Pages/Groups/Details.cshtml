@page "{id:int}"
@model Retailer.POS.Web.Pages.Groups.DetailsModel
@{
    ViewData["Title"] = "Group Details";
}

<h2>Group Details</h2>

<div class="card w-50">
    <div class="card-body">
        <p><strong>Id:</strong> @Model.Group.Id</p>
        <p><strong>Name:</strong> @Model.Group.Name</p>
    </div>
</div>

<a asp-page="Index" class="btn btn-secondary mt-2">Back</a>
