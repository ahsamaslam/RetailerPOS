@page
@model Retailer.POS.Web.Pages.Groups.IndexModel
@{
    ViewData["Title"] = "Item Groups";
}
<h2>Item Groups</h2>

<a asp-page="Create" class="btn btn-primary mb-2">Create New Group</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th style="width:200px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var g in Model.Groups)
        {
            <tr>
                <td>@g.Id</td>
                <td>@g.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@g.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Details" asp-route-id="@g.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
