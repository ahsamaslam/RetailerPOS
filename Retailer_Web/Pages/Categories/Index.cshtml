@page
@model Retailer.POS.Web.Pages.Categories.IndexModel
@inject Retailer.POS.Web.Services.IApiClient ApiClient
<!--begin::App Main-->
<main class="app-main">
    <!--begin::App Content Header-->
    <div class="app-content-header">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Row-->
            <div class="row">
                <div class="col-sm-6"><h3 class="mb-0">Categories</h3></div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-end">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Categories</li>
                    </ol>
                </div>
            </div>
            <!--end::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::App Content Header-->
    <!--begin::App Content-->
    <div class="app-content">
        <!--begin::Container-->
        <div class="container-fluid">
            <!--begin::Row-->
            <div class="row"> 
                <div class="col-sm-6"><a asp-page="Create" class="btn btn-primary">Create New Category</a> </div>


                </div>      <div class="row">
                <table id="myTable" class="table table-bordered table-striped">
    <thead><tr><th>Id</th><th>Name</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var c in Model.Categories)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>
</div>
    </div>
    </main>
@section Scripts {
    <script>
        $(document).ready(function () {
             $('#myTable').DataTable({
                 "paging": true,
                 "searching": true,
                 "ordering": true,
                 "info": true
             });
         
        });
    </script>
}