@page
@model Retailer.POS.Web.Pages.Categories.IndexModel
@inject Retailer.POS.Web.Services.IApiClient ApiClient

<h2>Categories</h2>
<a asp-page="Create" class="btn btn-primary">Create New Category</a>
<div id="spinner" style="display:none;position:fixed;top:0;left:0;width:100%;height:100%;background-color:rgba(255,255,255,0.7);z-index:9999; text-align:center;">
    <div style="position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>
<table id="myTable" class="table mt-2">
    <thead><tr><th>Id</th><th>Name</th><th>Actions</th></tr></thead>
    <tbody>
        @foreach (var c in Model.Categories)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Details" asp-route-id="@c.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "paging": true,
                "searching": true,
                "ordering": true,
                "info": true
            });
        });
    </script>
}
