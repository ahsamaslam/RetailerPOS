@page "{id:int}"
@model Retailer.POS.Web.Pages.Vendors.DetailsModel
@inject Retailer.POS.Web.Services.IApiClient ApiClient

<h2>Vendor Details</h2>

<div>
    <p><strong>Name:</strong> @Model.Vendor.Name</p>
    <p><strong>Mobile:</strong> @Model.Vendor.Mobile</p>
    <p><strong>City:</strong> @Model.Vendor.City</p>
    <p><strong>Province:</strong> @Model.Vendor.Province</p>
</div>

<a asp-page="Index" class="btn btn-secondary">Back</a>
