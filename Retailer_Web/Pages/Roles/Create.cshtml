@page
@model Retailer.POS.Web.Pages.Roles.CreateModel
@{
    ViewData["Title"] = "Create Role";
}

<h2>Create Role</h2>

<form method="post">
    <div class="mb-3">
        <label>Role Name</label>
        <input asp-for="Role.RoleName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Scopes</label>
        <div>
            @foreach (var s in Model.AllScopes)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@s.Id" id="scope_@s.Id" name="SelectedScopeIds" />
                    <label class="form-check-label" for="scope_@s.Id">@s.ScopeName</label>
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
