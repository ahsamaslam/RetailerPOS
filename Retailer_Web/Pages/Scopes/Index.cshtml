@page
@model Retailer.POS.Web.Pages.Scopes.IndexModel
@{
    ViewData["Title"] = "Scopes";
}

<h2>Scopes</h2>

<a asp-page="Create" class="btn btn-primary mb-2">Add Scope</a>

<table class="table table-striped">
    <thead>
        <tr><th>Id</th><th>Scope Name</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Scopes)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.ScopeName</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
