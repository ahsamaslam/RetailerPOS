@page "{id:int}"
@model Retailer.POS.Web.Pages.Scopes.EditModel
@{
    ViewData["Title"] = "Edit Scope";
}

<h2>Edit Scope</h2>

<form method="post">
    <input type="hidden" asp-for="Scope.Id" />
    <div class="mb-3">
        <label>Scope Name</label>
        <input asp-for="Scope.ScopeName" class="form-control" />
        <span asp-validation-for="Scope.ScopeName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
