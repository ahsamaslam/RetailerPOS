@page
@model Retailer.POS.Web.Pages.Branches.IndexModel
@{
    ViewData["Title"] = "Branches";
}
<h2>Branches</h2>
<a asp-page="Create" class="btn btn-primary mb-2">Create New Branch</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Mobile</th>
            <th>Contact Person</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model.Branches)
        {
            <tr>
                <td>@b.Name</td>
                <td>@b.MobileNo</td>
                <td>@b.ContactPerson</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@b.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="Details" asp-route-id="@b.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
