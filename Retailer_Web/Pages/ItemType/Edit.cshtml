@page "{id:int}"
@model Retailer.POS.Web.Pages.ItemType.EditModel

<h2>Edit ItemType</h2>

<form method="post">
    <input type="hidden" asp-for="ItemType.Id" />
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="ItemType.Name" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
