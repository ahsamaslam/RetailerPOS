@page "{id:int}"
@model Retailer.POS.Web.Pages.Customers.EditModel
@inject Retailer.POS.Web.Services.IApiClient ApiClient

<h2>Edit Customer</h2>

<form method="post">
    <input type="hidden" asp-for="Customer.Id" />
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="Customer.Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Mobile</label>
        <input asp-for="Customer.Mobile" class="form-control" />
    </div>
    <div class="mb-3">
        <label>City</label>
        <input asp-for="Customer.City" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Province</label>
        <input asp-for="Customer.Province" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
